.page-header
  = link_to new_article_path, :class => 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    New Article
  %h1 Listing articles

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th Name
        %th Content
        %th Author name
        %th User
        %th
        %th
        %th

    %tbody
      - @articles.each do |article|
        %tr
          %td= article.name
          %td= article.content
          %td= article.author_name
          %td= article.user
          %td= link_to_if can?(:read, article), 'Show', article
          %td= link_to_if can?(:edit, article), 'Edit', edit_article_path(article)
          %td= link_to_if can?(:destroy, article), 'Destroy', article, :data => { confirm: 'Are you sure?' }, :method => :delete
